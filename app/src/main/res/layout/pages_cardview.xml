<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pages_click_cover"
    android:layout_width="wrap_content"
    android:paddingBottom="10sp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pagenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Book Name"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_simple"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pagenumber">

        <ImageView
            android:id="@+id/pageimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/python" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/downloadbtn"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10sp"
        android:src="@drawable/downloadicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_simple" />

    <ImageView
        android:id="@+id/bookmarkbtn"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10sp"
        android:src="@drawable/addtobookmarkicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_simple" />


</androidx.constraintlayout.widget.ConstraintLayout>